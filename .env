# Application Configuration
PORT=4000
NODE_ENV=production
API_VERSION=v1
CORS_ORIGIN=https://app.solsynthai.com

# Solana Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
PROGRAM_ID=So1SynTH5aiWKr2tW6YLxrzE6bHrRKgifQGdZhfsYVz

# Security Configuration
JWT_SECRET=your-strong-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Storage Configuration
STORAGE_PATH=/var/data/solsynthai
STORAGE_MAX_SIZE=1073741824
STORAGE_BACKUP_ENABLED=true
STORAGE_BACKUP_INTERVAL=86400000

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=solsynthai
POSTGRES_USER=solsynthai_user
POSTGRES_PASSWORD=your-strong-postgres-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password
REDIS_DB=0

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=solsynthai-backups

# Metrics Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@solsynthai.com

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=30000
WS_PING_INTERVAL=10000

# Smart Contract Configuration
CONTRACT_VERSION=1.0.0
MAX_PROGRAM_SIZE=1048576
COMPUTE_BUDGET_UNITS=200000
PRIORITY_FEE_LAMPORTS=10000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=10000
CACHE_CHECK_PERIOD=600

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
API_TIMEOUT=30000

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HELMET_ENABLED=true

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REALTIME_MONITORING=true
FEATURE_AUTOMATED_BACKUPS=true
FEATURE_AI_GENERATION=true

# Development Only (will be ignored in production)
DEV_PRIVATE_KEY=your-development-wallet-private-key
DEV_HOT_RELOAD=false
DEV_MOCK_SERVICES=false
